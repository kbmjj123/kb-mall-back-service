{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@/enum": ["./enum"],
      "@/entity": ["./entity"],
      "@/config": ["./config"],
      "@/control": ["./control"],
      "@/middleware": ["./middleware"],
      "@/models": ["./models"],
      "@/plugins": ["./plugins"],
      "@/service": ["./service"],
      "@/utils": ["./utils"],
      "tsoa": ["node_modules/tsoa"]
    },
    "typeRoots": ["./types/", "./types/*.d.ts", "./node_modules/@types"],
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
